<link href="css/LandingPage/landing-list-card.css" rel="stylesheet" />

<div class="filter-wrapper">
    <div class="container">
        <style>
            .dropdown-toggle::after {
                content: none;
            }
        </style>
        <div class="row">
            <div class="dropdown col no-padding text-center">
                <button class="btn btn-outline-primary w-75 btn-sm dropdown-toggle" type="button" id="priceButton"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Price
                </button>
                <form class="dropdown-menu p-4">
                    <div class="mb-3">
                        <input type="text" class="form-control" id="priceMin" placeholder="Min">
                    </div>
                    <div class="mb-3 text-center">
                        to
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="priceMax" placeholder="Max">
                    </div>
                    <div class="row">
                        <div class="mb-3 text-center no-padding col">
                            <button type="button" class="btn w-75 btn-sm btn-outline-primary  btn-Light">Clear</button>
                        </div>
                        <div class="mb-3 text-center no-padding col">
                            <button type="button" class="btn w-75 btn-sm btn-primary"
                                onclick="price_save()">Save</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="dropdown col no-padding text-center">
                <button class="btn btn-outline-primary w-75 btn-sm dropdown-toggle" type="button" id="bedButton"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Bed
                </button>
                <form class="dropdown-menu p-4">
                    <div class="mb-3">
                        <input type="text" class="form-control" id="bedMin" placeholder="Min">
                    </div>
                    <div class="mb-3 text-center">
                        to
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="bedMax" placeholder="Max">
                    </div>
                    <div class="row">
                        <div class="mb-3 text-center no-padding col">
                            <button type="button" class="btn w-75 btn-sm btn-outline-primary  btn-Light">Clear</button>
                        </div>
                        <div class="mb-3 text-center no-padding col">
                            <button type="button" class="btn w-75 btn-sm btn-primary" onclick="bed_save()">Save</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="dropdown col no-padding text-center">
                <button class="btn btn-outline-primary w-75 btn-sm dropdown-toggle" type="button" id="bathButton"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Bath
                </button>
                <form class="dropdown-menu p-4">
                    <div class="mb-3">
                        <input type="text" class="form-control" id="bathMin" placeholder="Min">
                    </div>
                    <div class="mb-3 text-center">
                        to
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="bathMax" placeholder="Max">
                    </div>
                    <div class="row">
                        <div class="mb-3 text-center no-padding col">
                            <button type="button" class="btn w-75 btn-sm btn-outline-primary  btn-Light">Clear</button>
                        </div>
                        <div class="mb-3 text-center no-padding col">
                            <button type="button" class="btn w-75 btn-sm btn-primary"
                                onclick="bath_save()">Save</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="dropdown col no-padding text-center">
                <button class="btn btn-outline-primary w-75 btn-sm dropdown-toggle" type="button" id="typeButton"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Type
                </button>
                <form class="dropdown-menu p-4">
                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault1">
                        <label class="form-check-label" for="flexCheckDefault1">
                            House
                        </label>
                    </div>
                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault2">
                        <label class="form-check-label" for="flexCheckDefault2">
                            Condo
                        </label>
                    </div>
                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault3">
                        <label class="form-check-label" for="flexCheckDefault3">
                            Townhouse
                        </label>
                    </div>
                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault4">
                        <label class="form-check-label" for="flexCheckDefault4">
                            Duplex
                        </label>
                    </div>
                    <div class="row">
                        <div class="mb-3 text-center col">
                            <button type="button" class="btn w-75 btn-sm btn-primary">Save</button>
                        </div>
                        <div class="mb-3 text-center col">
                            <div class="mb-3 text-center no-padding col">
                                <button type="button"
                                    class="btn w-75 btn-sm btn-outline-primary  btn-Light">Clear</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="dropdown col no-padding text-center">
                <button class="btn btn-outline-primary w-75 btn-sm dropdown-toggle" type="button" id="communityButton"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Community
                </button>
                <form class="dropdown-menu p-4">
                    <div class="mb-3">
                        <input type="text" class="form-control" id="community" placeholder="Community">
                    </div>
                    <div class="row">
                        <div class="mb-3 text-center no-padding col">
                            <button type="button" class="btn w-75 btn-sm btn-outline-primary  btn-Light">Clear</button>
                        </div>
                        <div class="mb-3 text-center no-padding col">
                            <button type="button" class="btn w-75 btn-sm btn-primary"
                                onclick="price_save()">Save</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
        <div class="row" style="margin-top:9pt">
            <div class="col no-padding text-center"></div>
            <div class="col no-padding text-center"></div>
            <div class="col no-padding text-center"></div>
            <div class="col no-padding text-center">
                <button type="button" class="btn w-75 btn-outline-danger btn-sm btn-Light">Clear All</button>
            </div>
            <div class="col no-padding text-center">
                <button type="button" class="btn btn-primary w-75 btn-sm" onclick="filter()">Filter</button>
            </div>
        </div>
    </div>
</div>